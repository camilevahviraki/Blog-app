<div class="login-container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name).sub(/\.[\w]*\z/, '')) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :Name, placeholder: 'Name'%>
  </div>

  <div class="field">
    <%= f.label :Photo %><br />
    <%= f.text_field :Photo, placeholder: 'Picture avatar URL'%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Mail'%>
  </div>

  <div class="field">
    <%= f.label :email_confirmation %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Confirm mail'%>
  </div>

  <div class="field">
    <%= f.label :Bio %><br />
    <%= f.text_area :Bio, autofocus: true, :placeholder => 'enter your bio', :rows => 4, :cols => 120 %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'password' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'confirm password' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>